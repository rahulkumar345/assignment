<%- include('header'); -%>
    <!-- <img id="home-pg-img" src="https://miro.medium.com/max/1280/1*iSJrtQRtd-biK-zBvk2FsQ.jpeg" alt="net-banking" /> -->
    <div class="container">
        <div class="card-body">
            <h5 class="card-title">Register</h5>
            <form action="/user/signup" method="POST" class="validated-form" novalidate
                onsubmit="return checkforblankSignup()">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="balance">Balance</label>
                    <input class="form-control" type="number" id="balance" name="balance" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success btn-block">Register</button>
            </form>

        </div>

    </div>

    <%- include('footer'); -%>